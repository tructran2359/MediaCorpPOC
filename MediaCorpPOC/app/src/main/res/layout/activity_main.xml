<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.main.MainActivity"
    tools:ignore="MissingConstraints,HardcodedText"
    >

    <Button
        android:id="@+id/btnOc170"
        style="@style/mainScreenButton"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btnOc171"
        app:layout_constraintVertical_chainStyle="packed"
        android:text="OC-170"
        />

    <Button
        android:id="@+id/btnOc171"
        style="@style/mainScreenButton"
        app:layout_constraintTop_toBottomOf="@+id/btnOc170"
        app:layout_constraintBottom_toTopOf="@+id/btnOc171LargeData"
        android:layout_marginBottom="24dp"
        android:text="OC-171"
        />

    <Button
        android:id="@+id/btnOc171LargeData"
        style="@style/mainScreenButton"
        app:layout_constraintTop_toBottomOf="@+id/btnOc171"
        app:layout_constraintBottom_toTopOf="@+id/btnOc379"
        android:text="OC-171 Large Data"
        />

    <Button
        android:id="@+id/btnOc379"
        style="@style/mainScreenButton"
        app:layout_constraintTop_toBottomOf="@+id/btnOc171LargeData"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="OC-379"
        />

</androidx.constraintlayout.widget.ConstraintLayout>